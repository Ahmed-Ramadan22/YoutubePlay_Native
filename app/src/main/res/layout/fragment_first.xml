<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.firstFragment">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView_Channel1"
        android:visibility="gone"
        tools:ignore="WebViewLayout" />
    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/video_play_frag1"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            class="com.google.android.youtube.player.YouTubePlayerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/play_floating_btn_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="visible"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@+id/video_play_frag1"
            app:layout_constraintEnd_toEndOf="@+id/video_play_frag1"
            app:layout_constraintStart_toStartOf="@+id/video_play_frag1"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_play_circle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/channel_img_frag1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@id/video_play_frag1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_play_frag1"
            android:background="@drawable/logo" />

        <TextView
            android:id="@+id/channel_title_frag1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Coding with mitch"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/channel_img_frag1"
            app:layout_constraintTop_toBottomOf="@id/video_play_frag1" />

        <Button
            android:id="@+id/subscribe_btn_frag1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:text="@string/supscribe"
            android:shadowColor="#000"
            android:shadowRadius="30"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@drawable/back_btn"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.822"
            app:layout_constraintStart_toEndOf="@id/channel_title_frag1"
            app:layout_constraintTop_toBottomOf="@id/video_play_frag1"
            android:clickable="true"
            android:focusable="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>